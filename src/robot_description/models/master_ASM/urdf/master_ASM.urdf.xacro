<?xml version="1.0" encoding="utf-8"?>

<robot name="Master_ASM" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:arg name="simple_visuals" default="true" />

  <link name="base_link">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <inertial>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <mass
        value="56.0" />
      <inertia
        ixx="0.51975"
        ixy="0.00069908"
        ixz="2.9544E-06"
        iyy="0.93889"
        iyz="-3.8081E-06"
        izz="0.5273" />
    </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 -1.5708" />
        <geometry>
          <xacro:if value="$(arg simple_visuals)">
            <box size="0.45 1.0 0.5" />
          </xacro:if>
          <xacro:unless value="$(arg simple_visuals)">
            <mesh filename="package://robot_description/models/master_ASM/meshes/base_link.stl" />
          </xacro:unless>
        </geometry>
      <material
        name="">
        <color
          rgba="0.79216 0.81961 0.93333 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 -1.5708" />
        <geometry>
          <box size="0.45 1.0 0.5" />
        </geometry>
    </collision>
  </link>

  <xacro:arg name="use_zed_localization" default="true" />
  <xacro:include filename="$(find zed_wrapper)/urdf/zed_macro.urdf.xacro" />

  <!-- Add the first ZED Camera -->  
  <xacro:zed_camera name="zed2i" model="zed2i" enable_gnss="false">
    <!-- This block is required even if enable_gnss="false" for some reason, but you can leave it empty -->
    <gnss_origin></gnss_origin>
  </xacro:zed_camera>

  <!-- Add the second ZED Camera -->
  <xacro:zed_camera name="zed2i_rear" model="zed2i" enable_gnss="false">
    <!-- This block is required even if enable_gnss="false" for some reason, but you can leave it empty -->
    <gnss_origin></gnss_origin>
  </xacro:zed_camera>

  <xacro:if value="$(arg use_zed_localization)">
    <!-- ZED Localization -> The reference link is 'zed2i_camera_link' and 'base_link' is a child -->
    <joint name="zed2i_joint" type="fixed">
      <parent link="zed2i_camera_link"/>
      <child link="base_link"/>
      <origin xyz="-0.57 -0.005 0.198" rpy="0 0 0"/>
    </joint>    
  </xacro:if>
  <xacro:unless value="$(arg use_zed_localization)">
    <!-- NO ZED Localization -> 'zed2i_camera_link' is a child of 'base_link' -->
    <joint name="zed2i_joint" type="fixed">
      <parent link="base_link"/>
      <child link="zed2i_camera_link"/>
      <origin xyz="0.57 0.005 -0.198" rpy="0 0 0"/>
    </joint>
  </xacro:unless>
  
  <joint name="zed2i_rear_joint" type="fixed">
    <parent link="base_link"/>
    <child link="zed2i_rear_camera_link"/>
    <origin xyz="-0.57 0.252 -0.142" rpy="1.5708 0.0 -3.14"/>
  </joint>

  <gazebo reference="zed2i_camera_link">
    <sensor name="camera" type="camera">
      <always_on>true</always_on>
      <update_rate>30</update_rate>
      <camera>
        <horizontal_fov>1.91986218</horizontal_fov> 
        <image>
          <format>R8G8B8</format>
          <width>3840</width>
          <height>2160</height>
        </image>
        <clip>
          <near>0.3</near>
          <far>5.0</far>
        </clip>
      </camera>
      <topic>/color/image</topic>
      <info_topic>/color/camera_info</info_topic>
      <gz_frame_id>zed2i_left_camera_optical_frame</gz_frame_id>
    </sensor>
    <sensor name="depthcamera" type="depth">
      <always_on>true</always_on>
      <update_rate>30</update_rate>
      <camera>
        <horizontal_fov>1.91986218</horizontal_fov> 
        <image>
          <format>R8G8B8</format>
          <width>1280</width>
          <height>720</height>
        </image>
        <clip>
          <near>0.3</near>
          <far>20.0</far>
        </clip>
      </camera>
      <topic>/depth/image</topic>
      <info_topic>/depth/camera_info</info_topic>
      <gz_frame_id>zed2i_left_camera_optical_frame</gz_frame_id>
    </sensor>
  </gazebo>

  <gazebo reference="zed2i_rear_camera_link">
    <sensor name="camera_rear" type="camera">
      <always_on>true</always_on>
      <update_rate>30</update_rate>
      <camera>
        <horizontal_fov>1.91986218</horizontal_fov> 
        <image>
          <format>R8G8B8</format>
          <width>1280</width>
          <height>720</height>
        </image>
        <clip>
          <near>0.3</near>
          <far>5.0</far>
        </clip>
      </camera>
      <topic>/color/image_rear</topic>
      <info_topic>/color/camera_info_rear</info_topic>
      <gz_frame_id>zed2i_rear_left_camera_optical_frame</gz_frame_id>
    </sensor>
    <sensor name="depthcamera_rear" type="depth">
      <always_on>true</always_on>
      <update_rate>30</update_rate>
      <camera>
        <horizontal_fov>1.91986218</horizontal_fov> 
        <image>
          <format>R8G8B8</format>
          <width>1280</width>
          <height>720</height>
        </image>
        <clip>
          <near>0.3</near>
          <far>20.0</far>
        </clip>
      </camera>
      <topic>/depth/image_rear</topic>
      <info_topic>/depth/camera_info_rear</info_topic>
      <gz_frame_id>zed2i_rear_left_camera_optical_frame</gz_frame_id>
    </sensor>
  </gazebo>

  <link
    name="front_left_wheel_Link">
    <inertial>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <mass
        value="0.750" />
      <inertia
        ixx="0.0113625"
        ixy="0"
        ixz="0"
        iyy="0.0113625"
        iyz="0"
        izz="0.0096" />
    </inertial>
    <visual>
      <geometry>
        <xacro:if value="$(arg simple_visuals)">
          <cylinder radius="0.160" length="0.105" />
        </xacro:if>
        <xacro:unless value="$(arg simple_visuals)">
          <mesh filename="package://robot_description/models/master_ASM/meshes/wheel_link.stl" />
        </xacro:unless>
      </geometry>
      <xacro:if value="$(arg simple_visuals)">
        <origin xyz="0 0 0" rpy="0 1.5708 0" />
      </xacro:if>
      <xacro:unless value="$(arg simple_visuals)">
        <origin xyz="0 0 0" rpy="0 0 0" />
      </xacro:unless>
      <material name="">
        <color rgba="0.79216 0.81961 0.93333 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 1.5708 0" />
        <geometry>
          <cylinder radius="0.160" length="0.105" />
        </geometry>
    </collision>
  </link>
  <joint
    name="front_left_wheel_joint"
    type="continuous">
    <origin
      xyz="0.365 0.39 -0.26"
      rpy="1.5708 0 -1.5708" />
    <parent
      link="base_link" />
    <child
      link="front_left_wheel_Link" />
    <axis
      xyz="-1 0 0" />
  </joint>
  <link
    name="back_left_wheel_Link">
    <inertial>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <mass
        value="0.750" />
      <inertia
        ixx="0.0113625"
        ixy="0"
        ixz="0"
        iyy="0.0113625"
        iyz="0"
        izz="0.0096" />
    </inertial>
    <visual>
      <geometry>
        <xacro:if value="$(arg simple_visuals)">
          <cylinder radius="0.160" length="0.105" />
        </xacro:if>
        <xacro:unless value="$(arg simple_visuals)">
          <mesh filename="package://robot_description/models/master_ASM/meshes/wheel_link.stl" />
        </xacro:unless>
      </geometry>
      <xacro:if value="$(arg simple_visuals)">
        <origin xyz="0 0 0" rpy="0 1.5708 0" />
      </xacro:if>
      <xacro:unless value="$(arg simple_visuals)">
        <origin xyz="0 0 0" rpy="0 0 0" />
      </xacro:unless>
      <material name="">
        <color rgba="0.79216 0.81961 0.93333 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 1.5708 0" />
        <geometry>
          <cylinder radius="0.160" length="0.105" />
        </geometry>
    </collision>
  </link>
  <joint
    name="back_left_wheel_joint"
    type="continuous">
    <origin
      xyz="-0.365 0.39 -0.26"
      rpy="1.5708 0 -1.5708" />
    <parent
      link="base_link" />
    <child
      link="back_left_wheel_Link" />
    <axis
      xyz="-1 0 0" />
  </joint>
  <link
    name="front_right_wheel_Link">
    <inertial>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <mass
        value="0.750" />
      <inertia
        ixx="0.0113625"
        ixy="0"
        ixz="0"
        iyy="0.0113625"
        iyz="0"
        izz="0.0096" />
    </inertial>
    <visual>
      <geometry>
        <xacro:if value="$(arg simple_visuals)">
          <cylinder radius="0.160" length="0.105" />
        </xacro:if>
        <xacro:unless value="$(arg simple_visuals)">
          <mesh filename="package://robot_description/models/master_ASM/meshes/wheel_link.stl" />
        </xacro:unless>
      </geometry>
      <xacro:if value="$(arg simple_visuals)">
        <origin xyz="0 0 0" rpy="0 1.5708 0" />
      </xacro:if>
      <xacro:unless value="$(arg simple_visuals)">
        <origin xyz="0 0 0" rpy="0 0 0" />
      </xacro:unless>
      <material name="">
        <color rgba="0.79216 0.81961 0.93333 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 1.5708 0" />
        <geometry>
          <cylinder radius="0.160" length="0.105" />
        </geometry>
    </collision>
  </link>
  <joint
    name="front_right_wheel_joint"
    type="continuous">
    <origin
      xyz="0.355 -0.39 -0.26"
      rpy="1.5708 0.0 1.5708" />
    <parent
      link="base_link" />
    <child
      link="front_right_wheel_Link" />
    <axis
      xyz="1 0 0" />
  </joint>
  <link
    name="back_right_wheel_Link">
    <inertial>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <mass
        value="0.750" />
      <inertia
        ixx="0.0113625"
        ixy="0"
        ixz="0"
        iyy="0.0113625"
        iyz="0"
        izz="0.0096" />
    </inertial>
    <visual>
      <geometry>
        <xacro:if value="$(arg simple_visuals)">
          <cylinder radius="0.160" length="0.105" />
        </xacro:if>
        <xacro:unless value="$(arg simple_visuals)">
          <mesh filename="package://robot_description/models/master_ASM/meshes/wheel_link.stl" />
        </xacro:unless>
      </geometry>
      <xacro:if value="$(arg simple_visuals)">
        <origin xyz="0 0 0" rpy="0 1.5708 0" />
      </xacro:if>
      <xacro:unless value="$(arg simple_visuals)">
        <origin xyz="0 0 0" rpy="0 0 0" />
      </xacro:unless>
      <material name="">
        <color rgba="0.79216 0.81961 0.93333 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 1.5708 0" />
        <geometry>
          <cylinder radius="0.160" length="0.105" />
        </geometry>
    </collision>
  </link>
  <joint
    name="back_right_wheel_joint"
    type="continuous">
    <origin
      xyz="-0.355 -0.39 -0.26"
      rpy="1.5708 0.0 1.5708" />
    <parent
      link="base_link" />
    <child
      link="back_right_wheel_Link" />
    <axis
      xyz="1 0 0" />
  </joint>

  <gazebo>
    <plugin
      filename="ignition-gazebo-joint-state-publisher-system"
      name="ignition::gazebo::systems::JointStatePublisher">
      <topic>joint_states</topic>
    </plugin>

    <plugin
      filename="ignition-gazebo-joint-controller-system"
      name="ignition::gazebo::systems::JointController">
      <joint_name>front_left_wheel_joint</joint_name>
      <initial_velocity>0.0</initial_velocity>
    </plugin>

    <plugin
      filename="ignition-gazebo-joint-controller-system"
      name="ignition::gazebo::systems::JointController">
      <joint_name>back_left_wheel_joint</joint_name>
      <initial_velocity>0.0</initial_velocity>
    </plugin>

    <plugin
      filename="ignition-gazebo-joint-controller-system"
      name="ignition::gazebo::systems::JointController">
      <joint_name>front_right_wheel_joint</joint_name>
      <initial_velocity>0.0</initial_velocity>
    </plugin>

    <plugin
      filename="ignition-gazebo-joint-controller-system"
      name="ignition::gazebo::systems::JointController">
      <joint_name>back_right_wheel_joint</joint_name>
      <initial_velocity>0.0</initial_velocity>
    </plugin>
  </gazebo>

</robot>